# Example environment variables for eKahera backend
# Copy this file to `config.env` (or set env vars in your deployment)
# DO NOT commit real secrets to the repository.

# Database Configuration
DATABASE_URL=postgres://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:<DB_PORT>/<DB_NAME>
NODE_ENV=development
AUTO_INIT_DB=false

DB_HOST=<your-db-host>
DB_PORT=5432
DB_USER=<your-db-user>
DB_PASSWORD=<your-db-password>
DB_NAME=<your-db-name>
PORT=5000

# JWT Configuration
JWT_SECRET=<your-jwt-secret>

# Email Configuration for OTP and Notifications
EMAIL_USER=<your-email-user>
EMAIL_PASSWORD=<your-email-password>

RESEND_API_KEY=<your-resend-api-key>

# Frontend URL for email links
FRONTEND_URL=http://localhost:5173

# PayMongo
PAYMONGO_SECRET_KEY=<your-paymongo-secret-key>

# SuperAdmin Creation (for initial DB bootstrap)
CREATE_INITIAL_SUPERADMIN=false
SUPERADMIN_EMAIL=<superadmin-email>
SUPERADMIN_PASSWORD=<superadmin-password>
SUPERADMIN_NAME=System Administrator

# Supabase Storage Configuration
SUPABASE_STORAGE_ENDPOINT=<your-supabase-storage-endpoint>
SUPABASE_REGION=<your-supabase-region>
SUPABASE_ACCESS_KEY_ID=<your-supabase-access-key-id>
SUPABASE_SECRET_ACCESS_KEY=<your-supabase-secret-access-key>
